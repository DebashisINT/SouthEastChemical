<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/selector_tab_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.southeastchemicalfsm.widgets.AppCustomTextView
            android:id="@+id/ownPerformace_TV_frag_performace_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selected_performance_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:text="Own Performace"
            android:drawableLeft="@drawable/ic_customer"
            android:drawableTint="@color/white"
            android:textStyle="bold"
            android:textColor="@drawable/selector_text_color_white_performance" />

        <com.southeastchemicalfsm.widgets.AppCustomTextView
            android:id="@+id/teamPerformace_TV_frag_performace_app"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selected_performance_bg"
            android:clickable="true"
            android:focusable="true"
            android:drawableLeft="@drawable/ic_team_icon"
            android:drawableTint="@color/white"
            android:gravity="center"
            android:padding="@dimen/_13sdp"
            android:text="Team Performace"
            android:textStyle="bold"
            android:textColor="@drawable/selector_text_color_white_performance" />

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/performance_vp_frag_performance_app"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selector_tab_LL" />
</LinearLayout>
